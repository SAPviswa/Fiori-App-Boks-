<mvc:View
    xmlns:uxap="sap.uxap"
    controllerName="com.app.bookshop.controller.Form"
    xmlns:form="sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <uxap:ObjectPageLayout
        id="idBooksDetailsObject"
        upperCaseAnchorBar="true"
    >
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle id="idObjectPageDynamicTitle">
                <uxap:expandedHeading>
                    <Title
                        id="idBooksDetailsTitle"
                        text="{author}"
                    />
                </uxap:expandedHeading>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:sections>
            <uxap:ObjectPageSection
                titleUppercase="true"
                id="generalInfo"
                title="Books General Information"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="idGeneralInfoSubSection">
                        <uxap:blocks>
                            <form:SimpleForm
                                id="idBooksDetailsForm"
                                editable="false"
                                layout="ColumnLayout"
                                columnsM="2"
                                columnsL="3"
                                columnsXL="4"
                            >
                                <Label
                                    id="idNameLabel"
                                    text="Name"
                                />
                                <Text
                                    id="idNameText"
                                    text="{author}"
                                />
                                <Label
                                    id="idEmailLabel"
                                    text="Title"
                                />
                                <Text
                                    id="idEmailText"
                                    text="{title}"
                                />
                                <Label
                                    id="idPhoneLabel"
                                    text="Stock"
                                />
                                <Text
                                    id="idPhoneText"
                                    text="{stock}"
                                />
                                <Label
                                    id="idpublicationLabel"
                                    text="PublicationYear"
                                />
                                <Text
                                    id="idPublicationText"
                                    text="{publicationYear}"
                                />
                            </form:SimpleForm>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                id="idAuthorSection"
                title="Author Details"
                titleUppercase="true"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="idAuthorSubSection">
                        <uxap:blocks>
                            <core:Fragment 
                            type="XML"
                            fragmentName="com.app.bookshop.fragments.Author" />
                        </uxap:blocks>                        
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection
                id="idAddressSection"
                title="Address Details"
                titleUppercase="true"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="idAddressSubSection">
                        <uxap:blocks>
                            <core:Fragment 
                            type="XML"
                            fragmentName="com.app.bookshop.fragments.Address" />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>