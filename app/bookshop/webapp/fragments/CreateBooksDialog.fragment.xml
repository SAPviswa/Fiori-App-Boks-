<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateBooksDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Add New Book"
    >
        <beginButton>
            <Button
                id="idCreateButton"
                text="Add"
                press="onCreateBook"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton"
                text="Cancel"
                press="onCloseDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idBookDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idTitleLabel"
                    text="Title"
                />
                <Input
                    id="idTitleInput"
                    value=""
                />
                <Label
                    id="idStockLabel"
                    text="Stock"
                />
                <Input
                    id="idStockInput"
                    value=""
                />
                <Label
                    id="idAuthorLabel"
                    text="Author"
                />
                <Input
                    id="idAuthorInput"
                    value=""
                />
                <Label
                    id="idGenreLabel"
                    text="Genre"
                />
                <Input
                    id="idGenreInput"
                    value=""
                />
                <Label
                    id="idPublicationyearLabel"
                    text="Publication year"
                />
                <Input
                    id="idPublicationyearInput"
                    value=""
                />
                <Label
                    id="idPriceLabel"
                    text="Price"
                />
                <Input
                    id="idPriceInput"
                    value=""
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>