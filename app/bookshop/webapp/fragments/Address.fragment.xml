 <core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <form:SimpleForm
        id="idBooksAddressDetailsForm"
        editable="false"
        layout="ColumnLayout"
        columnsM="2"
        columnsL="3"
        columnsXL="4"
        binding="{address}"
    >
        <Label   
            id="idCityLabel"
            text="City"
        />
        <Text
            id="idCityText"
            text="{city}"
        />
        <Label
            id="idStateLabel"
            text="State"
        />
        <Text
            id="idStateText"
            text="{state}"
        />
        <Label
            id="idContryLabel"
            text="Country"
        />
        <Text
            id="idCountryText"
            text="{country}"
        />
        <Label
            id="idPincodeLabel"
            text="Pincode"
        />
        <Text
            id="idPincodeText"
            text="{pincode}"
        />
    </form:SimpleForm>
</core:FragmentDefinition>