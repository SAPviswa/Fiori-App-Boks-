 <core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <form:SimpleForm
        id="idBooksAuthorDetailsForm"
        editable="false"
        layout="ColumnLayout"
        columnsM="2"
        columnsL="3"
        columnsXL="4"
        class="AuthorForm"
    >
        <Label
            id="idQualificationLabel"
            text="Qualification"
        />
        <Text
            id="idQualificationText"
            text="{qualification}"
        />
        <Label
            id="idAgeLabel"
            text="Age"
        />
        <Text
            id="idAgeText"
            text="{age}"
        />
    </form:SimpleForm>
</core:FragmentDefinition>